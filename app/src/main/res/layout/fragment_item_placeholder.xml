<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_marginTop="20dp"
    android:padding="@dimen/activity_padding">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginLeft="@dimen/activity_padding"
        android:background="@drawable/rounded_placholder" />


    <View
        android:id="@+id/name"
        android:layout_width="110dp"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/thumbnail"
        android:background="?myThemePlaceholderBackground" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/name"
        android:layout_toLeftOf="@+id/thumbnail"
        android:background="?myThemePlaceholderBackground" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/line1"
        android:layout_toLeftOf="@+id/thumbnail"
        android:background="?myThemePlaceholderBackground" />

    <View
        android:id="@+id/line3"
        android:layout_width="230dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@+id/line2"
        android:layout_toLeftOf="@+id/thumbnail"
        android:background="?myThemePlaceholderBackground" />

</RelativeLayout>