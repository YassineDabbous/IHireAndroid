<com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appBarLayout"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


<!--?actionBarSize-->
    <!--
        android:background="@drawable/rectangle_toolbar"-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:background="?myTheme_toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:tint="?myTheme_toolbar_icon_secondary_color"
                android:id="@+id/toolbar_right"
                android:src="@drawable/filter"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


            <ImageView
                android:tint="?myTheme_toolbar_icon_secondary_color"
                android:id="@+id/toolbar_right_2"
                android:src="@drawable/plus"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_toLeftOf="@+id/toolbar_right"
                android:layout_toStartOf="@id/toolbar_right"/>

            <ImageView
                android:rotation="@integer/locale_mirror_flip"
                android:tint="?myTheme_toolbar_icon_secondary_color"
                android:id="@+id/toolbar_left"
                app:srcCompat="@drawable/back"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:visibility="invisible"
                android:tint="?myTheme_toolbar_icon_secondary_color"
                android:id="@+id/toolbar_left_2"
                app:srcCompat="@drawable/ic_style"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_toRightOf="@+id/toolbar_left"
                android:layout_toEndOf="@id/toolbar_left"/>


            <TextView
                android:textColor="?myTheme_toolbar_icon_secondary_color"
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:layout_toStartOf="@id/toolbar_right_2"
                android:layout_toEndOf="@id/toolbar_left_2"
                android:layout_toLeftOf="@id/toolbar_right_2"
                android:layout_toRightOf="@id/toolbar_left_2"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                android:ellipsize="end"
                android:maxLines="1"/>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>