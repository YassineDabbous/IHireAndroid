<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:id="@+id/shouldLogin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_parent_rounded_corner">

        <Button
            android:id="@+id/goToLogin"
            android:text="@string/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?myTheme_profile_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="80dp"
    android:paddingBottom="16dp"
    android:elevation="1dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="?myTheme_card_details_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_parent_rounded_corner">

        <TextView
            android:id="@+id/tvName"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            tools:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="?myTheme_list_itemTitleColor"
            android:fontFamily="sans-serif"/>

        <View
            android:id="@+id/online"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignTop="@+id/tvName"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/tvName"
            android:layout_toRightOf="@+id/tvName"
            android:background="@drawable/online" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvName"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxLines="2"
            tools:text="@string/app_name"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTitle"
            android:layout_marginBottom="4dp"
            tools:text="@string/app_name"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvEducation"
            android:layout_marginBottom="16dp"
            tools:text="@string/app_name"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@+id/tvEducation"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvAddress"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btnMessage"
                android:text="@string/connect_him"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/follow"
                android:text="@string/relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>


        </LinearLayout>



        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btns"
            android:gravity="center"
            android:ellipsize="end"
            tools:text="@string/app_name"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/showDetails"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvSummary"
            android:layout_gravity="center"
            app:srcCompat="@drawable/chevron_down_circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:tint="?myTheme_profile_more_button_color"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/photo"
                android:background="?myTheme_profile_picture_background"
                android:src="@drawable/rounded_placholder"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relativeLayout"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="?myTheme_card_details_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/posts"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/posts"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/postsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="?myTheme_text_important"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/friends"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/relations"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/friendsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="?myTheme_text_important"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/portfelio"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/works"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/worksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="?myTheme_text_important"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_below="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="?myTheme_card_details_background">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="@dimen/padd_10"
                            android:layout_marginRight="@dimen/padd_10"
                            android:tint="?myTheme_online"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_dialog_email"/>
                        <TextView
                            tools:text="@string/email"
                            android:id="@+id/email"
                            android:inputType="textEmailAddress"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingStart="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="@dimen/padd_10"
                            android:layout_marginRight="@dimen/padd_10"
                            android:tint="?myTheme_online"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_call"/>
                        <TextView
                            tools:text="@string/phone"
                            android:id="@+id/phone"
                            android:inputType="phone"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="@dimen/padd_10"
                            android:layout_marginRight="@dimen/padd_10"
                            android:tint="?myTheme_online"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_set_as"/>
                        <TextView
                            tools:text="@string/website"
                            android:id="@+id/website"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>