<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.IdeaFragment">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?myTheme_card_details_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topicCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/headerHead"
                android:translationZ="1dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingTop="@dimen/padd_10">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/liked"/>
                    <TextView
                        android:id="@+id/likesNbr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:fontFamily="cursive"
                        android:gravity="center"/>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    >

                    <TextView
                        tools:text="Just a post example"
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:textColor="?myTheme_list_itemTitleColor"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:id="@+id/divider"
                        android:layout_below="@+id/title"
                        android:background="?myTheme_list_divider"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_below="@+id/divider"
                        android:id="@+id/userPart"
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:background="@drawable/rectangle"
                            android:id="@+id/upicture"
                            android:src="@drawable/logo_circle"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            tools:text="Mohamed Ahmed"
                            android:layout_margin="4dp"
                            android:id="@+id/uname"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="?myTheme_link_color"
                            android:textSize="12sp"/>


                        <TextView
                            tools:text="3 years  ago"
                            android:layout_weight="1"
                            android:id="@+id/date"
                            android:gravity="end|center"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textColor="?myTheme_list_itemDateColor"
                            android:textSize="12sp" />


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


            <TextView
                tools:text=" \nIf you think thank you can, you will do, just start trying. \n   "
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:padding="@dimen/padd_10"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textColor="?myTheme_list_itemDescriptionColor"/>

            <ImageView
                android:src="@drawable/logo_circle"
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:visibility="gone"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topicCardView"
        android:layout_margin="8dp"
        app:cardBackgroundColor="?myTheme_card_details_background">
        <LinearLayout
            android:padding="@dimen/padd_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/more_informations"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padd_10"/>

            <TextView
                android:text="@string/speciality"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/speciality"
                android:textSize="12sp"
                tools:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/padd_10"
                android:layout_marginBottom="@dimen/padd_10"/>



            <TextView
                android:text="@string/budget"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/budget"
                android:textSize="12sp"
                tools:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/padd_10"
                android:layout_marginBottom="@dimen/padd_10"/>


            <TextView
                android:text="@string/tools"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tools"
                android:textSize="12sp"
                tools:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/btns"
        app:layout_constraintTop_toBottomOf="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="?myTheme_card_details_background">

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                android:src="@android:drawable/ic_menu_view"/>
            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:text="45"
                android:fontFamily="cursive"
                android:gravity="center"/>
        </LinearLayout>


            <ImageView
                android:layout_weight="1"
                android:id="@+id/shareBtn"
                android:layout_marginHorizontal="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_share_white_24dp"/>


            <ImageView
                android:layout_weight="1"
                android:id="@+id/reportBtn"
                android:layout_marginHorizontal="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/flag"/>


            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/likeBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/liked"/>
                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    tools:text="454"
                    android:fontFamily="cursive"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>