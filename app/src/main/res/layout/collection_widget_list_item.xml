<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:minHeight="@dimen/widget_listview_item_height"
              style="@style/Theme.Transparent"
              android:id="@+id/widgetItemContainer"
              android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/widgetImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_stat_onesignal_default"
        />


    <TextView
        android:id="@+id/widgetItemTaskNameLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        tools:text="@string/app_name"
        android:layout_toLeftOf="@+id/widgetImageView"
        android:layout_toStartOf="@+id/widgetImageView"
        android:gravity="center"/>


</RelativeLayout>