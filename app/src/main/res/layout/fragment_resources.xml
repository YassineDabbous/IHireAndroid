<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/elHead"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <Button
            android:layout_weight="1"
            android:id="@+id/allFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Feeds"/>
        <ImageButton
            android:background="@drawable/rounded_corners_full"
            android:tint="@color/white"
            android:backgroundTint="@color/green_lite"
            android:layout_gravity="center_vertical"
            android:src="@drawable/plus"
            android:id="@+id/newSource"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_job"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elHead">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elHead"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
