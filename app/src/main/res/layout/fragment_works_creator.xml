<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.fragments.WorksCreatorFragment"
    android:background="?myThemeBackground">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?myThemeBackgroundSecondary"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/add_picture"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <HorizontalScrollView
                android:scrollbarSize="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/photo_container"/>
            </HorizontalScrollView>
        </LinearLayout>



        <EditText
            android:id="@+id/title"
            android:hint="@string/title"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_add_post"
            android:inputType="text"
            android:background="@drawable/bg_edit_text"
            android:layout_margin="@dimen/margin_recyler"
            android:paddingLeft="@dimen/margin_recyler"
            android:paddingRight="@dimen/margin_recyler" />

        <EditText
            android:id="@+id/description"
            android:hint="@string/description"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:textSize="@dimen/text_size_add_post"
            android:background="@drawable/bg_edit_text"
            android:layout_margin="@dimen/margin_recyler"
            android:paddingLeft="@dimen/margin_recyler"
            android:paddingRight="@dimen/margin_recyler"
            android:gravity="top"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:scrollbars="vertical"/>

        <net.ekhdemni.presentation.ui.views.Select
            android:soundEffectsEnabled="true"
            android:popupBackground="?myThemeBackgroundColored"
            android:id="@+id/category"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edit_text"
            android:layout_margin="@dimen/margin_recyler"
            android:paddingLeft="@dimen/margin_recyler"
            android:paddingRight="@dimen/margin_recyler" />
        <net.ekhdemni.presentation.ui.views.Select
            android:layout_marginTop="2dp"
            android:soundEffectsEnabled="true"
            android:popupBackground="?myThemeBackgroundColored"
            android:id="@+id/speciality"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edit_text"
            android:layout_margin="@dimen/margin_recyler"
            android:paddingLeft="@dimen/margin_recyler"
            android:paddingRight="@dimen/margin_recyler" />



        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padd_10"
            android:text="@string/save"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</RelativeLayout>