<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:id="@+id/swipeLayout">


    <!-- Bottom View Start-->

    <LinearLayout
        android:tag="Bottom1"
        android:orientation="horizontal"
        android:id="@+id/bottom_wrapper"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="240dp">

        <Button
            android:id="@+id/enable"
            android:background="@drawable/rounded_corners_left"
            android:layout_width="80dp"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/notification"
            android:background="@drawable/shape_notification"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/delete"
            android:background="@drawable/rounded_corners_right"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="?myTheme_list_itemBackground"
        card_view:cardCornerRadius="12dp">


        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@drawable/ic_local_offer"
                android:src="@drawable/logo_circle"
                android:scaleType="fitXY"
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/logo"
                android:layout_toEndOf="@+id/logo"
                android:layout_toRightOf="@+id/logo"
                android:layout_toStartOf="@+id/reads"
                android:layout_toLeftOf="@+id/reads"
                android:text="@string/title"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textColor="?myTheme_list_itemTitleColor"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/report"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="@string/posts_number"
                android:textColor="?myTheme_list_itemDateColor"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/logo"
                android:layout_toRightOf="@+id/logo"
                android:layout_toStartOf="@+id/reads"
                android:layout_toLeftOf="@+id/reads"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"/>




            <ImageView
                android:visibility="invisible"
                android:id="@+id/verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shield_check"
                android:tint="#3395ff"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:id="@+id/reads"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/verified"
                android:layout_toStartOf="@+id/verified"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/unreadPostsNbr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="?myTheme_text_important"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/unreadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="@string/not_readed"
                    android:textColor="?myTheme_text_important"
                    android:layout_marginBottom="5dp"
                    android:textSize="10sp" />
            </LinearLayout>






        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <!-- Surface View End -->





</com.daimajia.swipe.SwipeLayout>