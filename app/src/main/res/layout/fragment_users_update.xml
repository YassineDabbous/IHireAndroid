<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="?myThemeBackground">


            <LinearLayout
                android:id="@+id/general"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?myThemeBackgroundSecondary"
                android:padding="8dp"
                android:layout_marginBottom="@dimen/padd_10">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_info"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"/>

                    <Button
                        android:id="@+id/saveGeneral"
                        style="@style/BtnSave"/>
                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <RadioButton android:id="@+id/male" android:text="@string/male"    android:buttonTint="?myTheme_button_primary_background" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <RadioButton android:id="@+id/female" android:text="@string/female"  android:buttonTint="?myTheme_button_primary_background" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </RadioGroup>

                <EditText
                    android:id="@+id/name"
                    android:hint="@string/hint_name"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/birthday"
                    android:hint="@string/birthday"
                    android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:focusable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:inputType="date" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="?myTheme_icon_color"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <net.ekhdemni.presentation.ui.views.Select
                        android:layout_margin="2dp"
                        android:background="?myTheme_spinner_background"
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>


                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:hint="@string/address"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/description"
                    android:drawablePadding="10dp"

                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"

                    android:gravity="top"
                    android:hint="@string/description"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:scrollbars="vertical" />


            </LinearLayout>


        <LinearLayout
            android:id="@+id/contact"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?myThemeBackgroundSecondary"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/padd_10">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_info"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/saveContact"
                        style="@style/BtnSave"/>
                </RelativeLayout>

            <EditText
                android:id="@+id/email"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/phone"
                android:hint="@string/phone"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:inputType="phone" />

            <EditText
                android:layout_margin="2dp"
                android:padding="10dp"
                android:id="@+id/website"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@android:drawable/ic_menu_set_as"
                android:hint="@string/website"
                android:inputType="textUri" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/language"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?myThemeBackgroundSecondary"
                android:padding="8dp"
                android:layout_marginBottom="@dimen/padd_10">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/languages"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/saveLang"
                        style="@style/BtnSave"/>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/languagesLayout"
                    android:padding="@dimen/padd_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/padd_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/item_user_language_selector"/>

                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/education"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?myThemeBackgroundSecondary"
                android:padding="8dp"
                android:layout_marginBottom="@dimen/padd_10">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/education"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/saveEducation"
                        style="@style/BtnSave"/>
                </RelativeLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:tint="?myTheme_icon_color"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <net.ekhdemni.presentation.ui.views.Select
                        android:layout_margin="2dp"
                        android:background="?myTheme_spinner_background"
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>




                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:tint="?myTheme_icon_color"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <net.ekhdemni.presentation.ui.views.Select
                        android:layout_margin="2dp"
                        android:background="?myTheme_spinner_background"
                        android:id="@+id/speciality"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>


                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/school"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:hint="@string/school"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/university"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="10dp"
                    android:hint="@string/university"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:tint="?myTheme_icon_color"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <net.ekhdemni.presentation.ui.views.Select
                        android:background="?myTheme_spinner_background"
                        android:id="@+id/level"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>

                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/graduation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:drawablePadding="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_day"

                    android:hint="@string/graduation"
                    android:inputType="date|number" />


                <EditText
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:id="@+id/experience"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:drawablePadding="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_day"

                    android:hint="@string/experience"
                    android:inputType="date|number" />

            </LinearLayout>



            <LinearLayout
            android:id="@+id/skills"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:background="?myThemeBackgroundSecondary"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/padd_10">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skills"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/saveSkills"
                        style="@style/BtnSave"/>
                </RelativeLayout>

            <LinearLayout
                android:id="@+id/skillsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/item_user_skill"/>
            </LinearLayout>

            <EditText
                android:layout_margin="2dp"
                android:padding="10dp"
                android:id="@+id/newSkill"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/skills"
                android:inputType="textPersonName" />
            <Button
                android:layout_margin="2dp"
                android:id="@+id/addSkills"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?myTheme_button_primary_background"
                android:elevation="4dp"
                android:text="@string/add_skill"
                android:textColor="#fff" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/desired"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?myThemeBackgroundSecondary"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/padd_10">

            <RelativeLayout
                android:layout_marginBottom="@dimen/padd_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desired_job"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/saveDesired"
                    style="@style/BtnSave"/>
            </RelativeLayout>


            <EditText
                android:layout_margin="2dp"
                android:padding="10dp"
                android:id="@+id/salary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:drawablePadding="10dp"
                android:drawableLeft="@android:drawable/ic_menu_preferences"

                android:hint="@string/desired_salary"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:tint="?myTheme_icon_color"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <net.ekhdemni.presentation.ui.views.Select
                    android:layout_margin="2dp"
                    android:background="?myTheme_spinner_background"
                    android:id="@+id/work_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/more"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?myThemeBackgroundSecondary"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/padd_10">

            <RelativeLayout
                android:layout_marginBottom="@dimen/padd_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_informations"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/saveMore"
                    style="@style/BtnSave"/>
            </RelativeLayout>

            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/permis" android:text="@string/permis" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <CheckBox android:id="@+id/military" android:text="@string/military" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <!--
                <CheckBox android:id="@+id/experience" android:text="@string/experience" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                -->
            </LinearLayout>
        </LinearLayout>




            <androidx.cardview.widget.CardView
                android:id="@+id/experiences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/addExperience"
                        android:layout_marginTop="8dp"
                        android:text="@string/add_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>