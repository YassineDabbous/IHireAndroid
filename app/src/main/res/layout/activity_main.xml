<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?myThemeBackground"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        android:visibility="gone"
        tools:visibility="visible"
        android:scaleType="fitXY"
        android:src="@drawable/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:background="?myTheme_toolbar_background"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_white_corners"
            app:itemIconTint="?myTheme_toolbar_icon_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--
                                <EditText
                                    android:id="@+id/filter"
                                    android:focusedByDefault="false"
                                    android:focusable="false"
                                    android:textColor="?myThemePrimary"
                                    android:textColorHint="#c7c7c7"
                                    android:hint="@string/search"
                                    android:background="@drawable/rounded__clear_grey_corners"
                                    android:drawableLeft="@android:drawable/ic_menu_search"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_margin="5dp"
                                    android:minWidth="180dp"
                                    android:layout_weight="0.5"/>
                -->
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:clickable="true"
                            app:srcCompat="@drawable/magnify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/filter"
                            android:scaleType="fitCenter"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:clickable="true"
                            app:srcCompat="@drawable/account_multiple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reqs"
                            android:scaleType="fitCenter"/>

                        <TextView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:id="@+id/reqsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/reqs"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/reqs"
                            android:background="@drawable/headview_counter"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            tools:text="2"
                            android:textColor="?myTheme_head_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:clickable="true"
                            app:srcCompat="@drawable/telegram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/convs"
                            android:scaleType="fitCenter"/>

                        <TextView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:id="@+id/convsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/convs"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/convs"
                            android:background="@drawable/headview_counter"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            tools:text="2"
                            android:textColor="?myTheme_head_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:clickable="true"
                            app:srcCompat="@drawable/bell_outline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/notifs"
                            android:scaleType="fitCenter"/>

                        <TextView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:id="@+id/notifsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/notifs"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/notifs"
                            android:background="@drawable/headview_counter"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            tools:text="2"
                            android:textColor="?myTheme_head_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        tools:visibility="visible"
                        android:visibility="visible"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:tint="?myTheme_toolbar_icon_color"
                            android:clickable="true"
                            app:srcCompat="@drawable/menu_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menuRight"
                            android:scaleType="fitCenter"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>



        <androidx.appcompat.widget.SearchView
            android:background="?myTheme_searchView_background"
            android:id="@+id/searchView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.SearchView>


    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_below="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:openDrawer="start">


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/content_main" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <fragment
                tools:visibility="gone"
                android:name="net.ekhdemni.presentation.ui.fragments.menu.DrawerFragmentLeft"
                android:id="@+id/left_navigation_drawer_fragment"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                app:layout="@layout/fragment_drawer_left"
                tools:layout="@layout/fragment_drawer_left"/>
            <fragment
                tools:visibility="gone"
                android:name="net.ekhdemni.presentation.ui.fragments.menu.DrawerFragmentRight"
                android:id="@+id/right_navigation_drawer_fragment"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:fitsSystemWindows="true"
                app:layout="@layout/fragment_drawer_left"
                tools:layout="@layout/fragment_drawer_left"/>


            <!--
                        <com.google.android.material.navigation.NavigationView
                            android:background="?myTheme_navigationView_background"
                            app:itemIconTint="?myTheme_navigationView_icon_color"
                            app:itemTextColor="?myTheme_navigationView_text_color"
                            tools:headerLayout="@layout/nav_header_main"
                            android:id="@+id/nav_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:fitsSystemWindows="true"
                            app:menu="@menu/activity_main_drawer" />

                        <com.google.android.material.navigation.NavigationView
                            android:background="?myTheme_navigationView_background"
                            app:itemIconTint="?myTheme_navigationView_icon_color"
                            app:itemTextColor="?myTheme_navigationView_text_color"
                            android:id="@+id/nav_viewRight"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:fitsSystemWindows="true"
                            app:menu="@menu/activity_main_drawer" />
                            -->

<!--
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="?myThemePrimary"
                app:borderWidth="0dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_done_all" />-->

        </androidx.drawerlayout.widget.DrawerLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:background="?myTheme_navigationViewBottom_background"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:visibility="gone"
            app:menu="@menu/navigation" />
<!-- android:background="?android:attr/windowBackground"-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</RelativeLayout>