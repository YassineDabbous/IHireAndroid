<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?myThemeBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/head"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_margin="8dp"
            app:cardBackgroundColor="?myTheme_card_details_background">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padd_10">

                <TextView
                    android:text="@string/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/name"
                    tools:text="@string/app_name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gender"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/birthday"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/addressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">
            <LinearLayout
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/address_and_contact"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/country"
                    tools:text="@string/app_name"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/address"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/email"
                    tools:text="@string/app_name"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/phone"
                    tools:text="@string/app_name"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/website"
                    tools:text="@string/app_name"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/descriptionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">
            <LinearLayout
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/description"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/description"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/skillsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">
            <LinearLayout
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/skills"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/skillsLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">
            <LinearLayout
                android:id="@+id/languagesLayout"
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:text="@string/languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_10"/>


            </LinearLayout>




        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">
            <LinearLayout
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/education"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_10"/>

                <TextView
                    android:text="@string/workfield"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/category"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>



                <TextView
                    android:text="@string/degree"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/degree"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>




                <TextView
                    android:text="@string/university"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/university"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>


                <TextView
                    android:text="@string/school"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/school"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>


                <TextView
                    android:text="@string/speciality"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/speciality"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>



                <TextView
                    android:text="@string/graduation"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/graduation"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/advantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_margin="8dp"
            app:cardBackgroundColor="?myTheme_card_details_background">
            <LinearLayout
                android:padding="@dimen/padd_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/more_informations"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padd_10"/>

                <TextView
                    android:text="@string/permis"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/permis"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>



                <TextView
                    android:text="@string/military"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/military"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>


                <TextView
                    android:text="@string/desired_salary"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/salary"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="@dimen/padd_10"/>


                <TextView
                    android:text="@string/work_system"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/work_type"
                    android:textSize="12sp"
                    tools:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/experiences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            app:cardBackgroundColor="?myTheme_card_details_background"
            android:layout_margin="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>