<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_power_menu_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="?myTheme_list_itemBackground">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="?myTheme_list_itemTitleColor"
        android:lineSpacingExtra="6sp"
        android:padding="13dp"
        tools:text="قائمة قائمة قائمة قائمة قائمة"
        android:layout_toLeftOf="@+id/icon"
        android:gravity="right|center_vertical" />



    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/icon"
        android:tint="?myThemePrimary"
        app:srcCompat="@drawable/ic_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>