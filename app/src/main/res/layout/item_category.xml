<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="1dip"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:background="?myTheme_list_itemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/colored"
            android:background="?myTheme_head_text_background"
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <TextView
                android:id="@+id/title"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="?myTheme_list_itemTitleColor"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="25 job offer"
                android:textColor="?myTheme_list_itemDateColor"
                android:textSize="12dip"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/follow"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="0dp"
            android:tint="?myTheme_list_itemButtonColor"
            android:src="@drawable/ic_os_notification_fallback_white_24dp"
            android:layout_margin="2dp" />

        <TextView
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:id="@+id/counter"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:text="+99"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="?myTheme_head_text_color"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>