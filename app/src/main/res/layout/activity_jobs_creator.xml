<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundImage"
        android:visibility="gone"
        tools:visibility="visible"
        android:scaleType="fitXY"
        android:src="@drawable/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/toolbar"></include>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/appBarLayout"
        android:background="?myThemeBackgroundSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <ImageView android:visibility="gone"
                android:scaleType="fitXY"
                android:id="@+id/picture"
                app:srcCompat="@drawable/image_area"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rectangle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/MyTextInputLayout"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/MyTextInputEditText"
                    android:id="@+id/title"
                    android:hint="@string/title"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_add_post" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/MyTextInputLayout"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/MyTextInputEditText"
                    android:id="@+id/description"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:scrollbars="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:hint="@string/description"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:singleLine="false"
                    android:textSize="@dimen/text_size_add_post"
                    android:layout_margin="2dp" />
            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                style="@style/MyTextInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/MyTextInputEditText"
                android:id="@+id/experience"
                android:inputType="number"
                android:hint="@string/min_experience"
                android:textSize="@dimen/text_size_add_post"
                android:layout_margin="2dp" />
            </com.google.android.material.textfield.TextInputLayout>






            <RadioGroup
                android:checkedButton="@+id/both"
                android:id="@+id/gender"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <RadioButton android:id="@+id/male" android:text="@string/male" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <RadioButton android:id="@+id/female" android:text="@string/female" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <RadioButton android:id="@+id/both" android:text="@string/both" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </RadioGroup>



            <net.ekhdemni.presentation.ui.views.Select
                android:id="@+id/category"
                android:soundEffectsEnabled="true"
                android:popupBackground="?myThemeBackgroundColored"
                android:background="@drawable/bg_edit_text"
                android:layout_margin="@dimen/margin_recyler"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/text_size_add_post"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler"/>

            <net.ekhdemni.presentation.ui.views.Select
                android:id="@+id/speciality"
                android:soundEffectsEnabled="true"
                android:popupBackground="?myThemeBackgroundColored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/text_size_add_post"
                android:background="@drawable/bg_edit_text"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler"/>

            <net.ekhdemni.presentation.ui.views.Select
                android:popupBackground="?myThemeBackgroundColored"
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/text_size_add_post"
                android:background="@drawable/bg_edit_text"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler"/>
            <net.ekhdemni.presentation.ui.views.Select
                android:popupBackground="?myThemeBackgroundColored"
                android:id="@+id/work_system"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/text_size_add_post"
                android:background="@drawable/bg_edit_text"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler"/>
            <net.ekhdemni.presentation.ui.views.Select
                android:popupBackground="?myThemeBackgroundColored"
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="@dimen/text_size_add_post"
                android:background="@drawable/bg_edit_text"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler" />



            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/permis" android:text="@string/permis" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <CheckBox android:id="@+id/military" android:text="@string/military" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/MyTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/MyTextInputEditText"
                    android:id="@+id/minSalary"
                    android:hint="@string/min_salary"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_add_post"
                    android:layout_margin="2dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/MyTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/MyTextInputEditText"
                    android:id="@+id/maxSalary"
                    android:inputType="number"
                    android:hint="@string/max_salary"
                    android:textSize="@dimen/text_size_add_post"
                    android:layout_margin="2dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout android:id="@+id/requiredSkills" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyTextInputLayout">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/MyTextInputEditText"
                        android:id="@+id/s1"
                        android:hint="@string/required_skill"
                        android:textSize="@dimen/text_size_add_post"
                        android:layout_margin="2dp"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyTextInputLayout">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/MyTextInputEditText"
                        android:id="@+id/s2"
                        android:hint="@string/required_skill"
                        android:textSize="@dimen/text_size_add_post"
                        android:layout_margin="2dp"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addSkills"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?myTheme_button_info_background"
                android:textColor="?myTheme_button_primary_text_color"
                android:text="@string/add_skill"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler"/>






            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                android:layout_marginTop="30dp"
                android:text="@string/save"
                android:layout_margin="@dimen/margin_recyler"
                android:paddingLeft="@dimen/margin_recyler"
                android:paddingRight="@dimen/margin_recyler" />

        </LinearLayout>







    </androidx.core.widget.NestedScrollView>
</RelativeLayout>