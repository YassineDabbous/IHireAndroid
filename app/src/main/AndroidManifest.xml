<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ekhdemni">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <permission
        android:name="android.permission.INTERACT_ACROSS_USERS_FULL"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:largeHeap="true"
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_initialize"/>

        <receiver
            android:name=".presentation.mchUI.services.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".presentation.mchUI.services.RestartServiceBroadcastReceiver"
            android:enabled="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="dontKillMe" />
            </intent-filter>
        </receiver>

        <service
            android:name=".presentation.mchUI.services.MyService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" />
        <service
            android:name=".presentation.mchUI.notificationHeads.ChatHeadService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" />

        <receiver
            android:name=".presentation.mchUI.widgets.CollectionAppWidgetProvider"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.ekhdemni.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/collection_widget" />
        </receiver>

        <service
            android:name=".presentation.mchUI.widgets.MyWidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name=".presentation.ui.activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.activities.MainActivity" android:label="@string/app_name"></activity>
        <activity android:name=".presentation.ui.activities.BrowserActivity" />
        <activity android:name=".presentation.ui.activities.ViewerActivity" />
        <activity android:name=".presentation.ui.activities.WelcomeViewerActivity" />
        <activity android:name=".presentation.ui.activities.settings.SettingsPrefActivity" />
        <activity android:name=".presentation.ui.activities.ForumsActivity" />
        <activity android:name=".presentation.ui.activities.auth.SignupActivity" />
        <activity android:name=".presentation.ui.activities.auth.ResetPasswordActivity" />
        <activity android:name=".presentation.ui.activities.auth.LoginActivity" />
        <activity android:name=".presentation.ui.activities.CommentsActivity" />
        <activity android:name=".presentation.ui.activities.JobsActivity" />
        <activity android:name=".presentation.ui.activities.CategoriesActivity" />
        <activity android:name=".presentation.ui.activities.UsersActivity" />
        <activity android:name=".presentation.ui.activities.JobDetailsActivity" />
        <activity android:name=".presentation.ui.activities.JobsCreatorActivity" />
        <activity android:name=".presentation.ui.activities.ConversationsActivity" />
        <activity android:name=".presentation.ui.activities.WorksActivity" />
    </application>

</manifest>